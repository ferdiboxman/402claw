{
  "$schema": "https://clawr.ai/schemas/skill-v1.json",
  "name": "cold-email-writer",
  "version": "1.0.0",
  "description": "Write cold emails that actually get replies",
  "author": "clawr",
  
  "pricing": {
    "model": "per-invocation",
    "price": "0.02",
    "currency": "USDC"
  },
  
  "input": {
    "type": "object",
    "required": ["prospect", "offer"],
    "properties": {
      "prospect": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "company": { "type": "string" },
          "role": { "type": "string" },
          "linkedin": { "type": "string" },
          "context": { "type": "string" }
        }
      },
      "offer": {
        "type": "string",
        "description": "What you're offering/asking for"
      },
      "tone": {
        "type": "string",
        "enum": ["casual", "professional", "bold"],
        "default": "casual"
      },
      "length": {
        "type": "string",
        "enum": ["short", "medium"],
        "default": "short"
      }
    }
  },
  
  "output": {
    "type": "object",
    "properties": {
      "subject": { "type": "string" },
      "body": { "type": "string" },
      "followUp": { "type": "string" },
      "tips": { "type": "array" }
    }
  },
  
  "runtime": {
    "type": "prompt",
    "model": "claude-sonnet-4-5",
    "systemPrompt": "prompts/main.md",
    "maxTokens": 1500,
    "timeout": 30
  },
  
  "metadata": {
    "category": "sales",
    "tags": ["email", "cold-outreach", "sales", "copywriting"],
    "icon": "✉️"
  }
}
